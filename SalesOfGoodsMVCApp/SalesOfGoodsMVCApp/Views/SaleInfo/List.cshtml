@*@model IndexViewModel<DAL.Models.SaleInfo>*@
@model SaleInfoViewModel

@using SalesOfGoodsMVCApp.Models

@{
    ViewBag.Title = "List SaleInfo";
}

<h2>List SaleInfo</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get">
    <div class="form-inline">
        <label class="control-label">Client: </label>
        @Html.DropDownList("client", Model.Clients, new { @class = "form-control" })

        <label class="control-label">Product: </label>
        @Html.DropDownList("product", Model.Products, new { @class = "form-control" })

        <label class="control-label">Manager: </label>
        @Html.DropDownList("manager", Model.Managers, new { @class = "form-control" })

        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
</form>

<table>
    <tr>
        <th>
            @Html.DisplayName("Client FirstName")
        </th>
        <th>
            @Html.DisplayName("Client SecondName")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Product")
        </th>
        <th>
            @Html.DisplayName("Manager FirstName")
        </th>
        <th>
            @Html.DisplayName("Manager SecondName")
        </th>
        <th>
            @Html.DisplayName("Cost")
        </th>
        <th>
            @Html.DisplayName("Currency")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.SaleInfos)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Client.FirstName)
            </td>
            <td>
                @Html.DisplayFor(model => item.Client.SecondName)
            </td>
            <td>
                @Html.DisplayFor(model => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.FileInfo.Manager.FirstName)
            </td>
            <td>
                @Html.DisplayFor(model => item.FileInfo.Manager.SecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

