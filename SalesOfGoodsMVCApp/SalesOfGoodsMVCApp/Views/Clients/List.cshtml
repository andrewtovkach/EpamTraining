@model IndexViewModel<DAL.Models.Client>

@using SalesOfGoodsMVCApp.Models

@{
    ViewBag.Title = "List Clients";
}

<h2>List Clients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayName("FirstName")
        </th>
        <th>
            @Html.DisplayName("SecondName")
        </th>
        <th>
            @Html.DisplayName("BirthDay")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Elements)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>

<br />
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("List",new { page = x}))
</div>
