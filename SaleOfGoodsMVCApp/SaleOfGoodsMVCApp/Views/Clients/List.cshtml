@model IndexViewModel<DAL.Models.Client>

@using BLL
@using SaleOfGoodsMVCApp.Models

@{
    ViewBag.Title = "List Clients";
}

<h2>List Clients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div id="results">
    @Html.Partial("ListPartial", Model.Elements)
</div>

<div id="pages" class="btn-group">
    @for (int i = 1; i <= Model.PageInfo.TotalPages; i++)
    {
        @Ajax.RawActionLink(i.ToString(), "ListPartial", "Clients", new {page = i},
            new AjaxOptions {UpdateTargetId = "results"}, new {@class = "btn btn-default"})
    }
</div>

<script type="text/javascript">
    $("#pages a").first().removeClass().addClass("btn btn-primary");
    $("#pages a").on('click', function () {
        $("#pages a").removeClass().addClass("btn btn-default");
        $(this).removeClass().addClass("btn btn-primary");
    });
</script>