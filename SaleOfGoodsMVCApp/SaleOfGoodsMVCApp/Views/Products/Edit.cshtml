@model BLL.DTO.Product

@{
    ViewBag.Title = "Edit Product";
}

<h2>Edit Product</h2>
<hr/>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="form-group">
            @Html.Label("Country", new { @class = "col-md-2 control-label" })
            @Html.DropDownListFor(model => model.Country.Id, ViewBag.Countries as SelectList, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="btn-group">
                <button type="submit" value="Save" class="btn btn-primary">Save</button>
                @Html.ActionLink("Back to List", "List", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
